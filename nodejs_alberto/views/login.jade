extends layout2

block content
  div.row
    .pull-left
      img(src="/images/descarga.jpg", alt="perfil")


    div.pull-right
        div.panel.panel-default
          div.panel-heading
            strong Login
          div.panel-body
            form.form-horizontal(role="form" method="post", action="/login")
              div.form-group
                label.col-sm-3.control-label DNI
                div.col-sm-9
                  input.form-control(type="text", name="dni", required="required")
              div.form-group
                label.col-sm-3.control-label Password
                div.col-sm-9
                  input.form-control(type="password", name="password", required="required")
              div.form-group.last
                div.col-sm-offset-3.col-sm-9
                  input.btn.btn-success(type="submit", value="Login")
          div.panel-footer
            a(href="#") ¿Olvidó su contraseña?