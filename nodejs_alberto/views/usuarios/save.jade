extends ../layout

block content
  .container             
    div.col-xs-12.col-sm-12.col-md-6.col-lg-6.col-xs-offset-0.col-sm-offset-0.col-md-offset-3.col-lg-offset-3.toppad
      form.panel.panel-info.form-horizontal(method="post", action="#{action}")
        div.panel-heading
          h3.panel-title Usuario
        div.panel-body
            -if(put)
              input(type="hidden", name="_method", value="PUT")
            div.form-group
              label.col-sm-3.control-label DNI
              div.col-sm-9
                input.form-control(type="text", name="dni", required="required", value="#{usuario.dni}")
            div.form-group
              label.col-sm-3.control-label Nombre
              div.col-sm-9
                input.form-control(type="text", name="nombre", required="required", value="#{usuario.nombre}")
            div.form-group
              label.col-sm-3.control-label Rol
              div.col-sm-9
                input.form-control(type="text", name="rol", required="required", value="#{usuario.rol}")
            div.form-group
              label.col-sm-3.control-label Apellido
              div.col-sm-9
                input.form-control(type="text", name="apellido", required="required", value="#{usuario.apellido}")
            div.form-group
              label.col-sm-3.control-label Password
              div.col-sm-9
                input.form-control(type="password", name="password", required="required", value="#{usuario.password}")
            div.form-group
              label.col-sm-3.control-label Email
              div.col-sm-9
                input.form-control(type="email", name="email", required="required", value="#{usuario.email}")
            br
        div.panel-footer
          input.btn.btn-primary(type="submit", value="Guardar")
          span 
          a.btn.btn-primary(href="/usuarios") Cancelar      


