extends ../layout

block content
  .container             
    div
      div.col-xs-12.col-sm-12.col-md-6.col-lg-6.col-xs-offset-0.col-sm-offset-0.col-md-offset-3.col-lg-offset-3.toppad
        div.panel.panel-info
          div.panel-heading
            h3.panel-title
              #{usuario.nombre} #{usuario.apellido}
          div.panel-body
            div.row
              div.col-md-3.col-lg-3(align="center")
              div.col-md-9.col-lg-9
                table.table.table-user-information
                  tbody
                    tr
                      td Nombre
                      td #{usuario.nombre}
                    tr
                      td Apellido
                      td #{usuario.apellido}
                    tr
                      td DNI
                      td #{usuario.dni}
                    tr
                      td Rol
                      td #{usuario.rol}
                    tr
                      td E-mail
                      td #{usuario.email}
          div
            div.panel-footer
              -if(usuario.rol=="admin")
                a.btn.btn-sm.btn-primary(href="/usuarios") Atrás
              -else
                a.btn.btn-sm.btn-primary(href="/principal") Atrás


