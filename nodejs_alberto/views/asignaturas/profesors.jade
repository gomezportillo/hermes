extends ../layout

block content
  div.col-xs-12.col-sm-12.col-md-6.col-lg-6.col-xs-offset-0.col-sm-offset-0.col-md-offset-3.col-lg-offset-3.toppad
      div.panel-heading
        h3.panel-title Profesores
        div.panel-body
          form.form-horizontal(role="form" method="post", action="#{action}")
            div.form-group.last
              p.confirm
                -each user in usuarios
                  -if(user.rol!='admin' & user.rol!='alumno')
                    li #{user.nombre} #{user.apellido} -- #{user.dni} 
                      input(id='showpass',type='checkbox', name='#{user.id}')
                br
            div.form-group.last
              input.btn.btn-primary(type="submit", value="Guardar")
              span 
              a.btn.btn-primary(href="/asignaturas") Cancelar
  
